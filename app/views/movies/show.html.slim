.row
  .large-12.columns
    h1 =@movie.title

.row
  .large-6.columns
    .row
      .large-5.columns
        .panel
          =image_tag(@movie.image_url, class: 'large-cover')
        .large-12.columns
          = link_to image_tag('/imdb_icon.jpg'), @movie.imdb_link
          = link_to image_tag('/amazon_icon.jpg'), @movie.amazon_link
          = link_to image_tag('/metacritic_icon.jpg'), @movie.metacritic_link
          = link_to image_tag('/rotten_tomatoes_icon.jpg'), @movie.rotten_tomatoes_link
      .large-7.columns
        table.summary
          tr
            th Year
            td =@movie.year
          tr
            th Genres
            td =@movie.genres.join(', ')
          -unless @movie.related_people[:directors].nil?
            tr
              th Directors
              td   =@movie.related_people[:directors].map { |d| d['name'] }.join(', ')
          tr
            th Starring
            td =@movie.related_people[:cast].to_a.take(3).map { |member| member[:name] }.join(', ')
          tr
            th Updated
            td =distance_of_time_in_words(Time.new, @movie.updated_at).gsub('about ', '') + " ago"
          tr
            th Added
            td =distance_of_time_in_words(Time.new, @movie.created_at).gsub('about ', '') + " ago"
    .row
      .large-12.columns
        .panel
          span.has-tip aria-haspopup="true" data-tooltip="" title="Interesting facts about this movie." Summary
          ul
            -facts(@movie).each do |fact|
              li
                =fact

    .row
      .large-12.columns
        .panel
          span.has-tip aria-haspopup="true" data-tooltip="" title="Overview of this movie, compared to all others." Comparison
          ul
            -[topic_counts(@movie), topic_sentiments(@movie), people_count(@movie)].each do |comment, indicator|
              li
                -if indicator
                  span.success.label =comment
                -else
                  span.alert.label =comment
    .row
      .large-12.columns
        .panel
          -unless @movie.sentiment[:people].empty?
            =render "cast_sentiment_graph", id: @movie.id, people: @movie.sentiment[:people]

  .large-6.columns
    .row
      .large-12.columns
        .panel
          =render "aspects_graph", id: @movie.id, aspects: @movie.sentiment[:topics], counts: @movie.stats[:topic_counts]
    .row
      .large-12.columns
        .panel
          =render "sentiment_ratings_graph", id: @movie.id, ratings: @movie.stats[:rating_distribution], sentiment: @movie.sentiment[:distribution_stats][:values]
          p
            strong Range:&nbsp;
            =(@movie.sentiment[:distribution_stats][:range] * 100).to_i
            |&nbsp;&nbsp;
            strong Variation:&nbsp;
            =(@movie.sentiment[:distribution_stats][:st_dev] * 100).to_i
